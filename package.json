    "search:bootstrap": "npm run create-indexes && npm run sync",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "NODE_OPTIONS=\"--loader ./stubs/alias-loader.mjs\" node --test tests/cgiBtsEnrichment.test.js tests/realtimeCdrService.integration.test.js tests/filter-utils.test.js",
